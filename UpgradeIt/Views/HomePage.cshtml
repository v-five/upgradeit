@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "Page.cshtml";
    var projects = Model.Content.Children().Where(p => p.GetPropertyValue<bool>("isApproved")).OrderBy(p => p.Descendants("like").Count()).Take(5);
}

@section subHeader{
<div class="sub-header">
    <h1>@Model.Content.GetPropertyValue("motto")</h1>
    <p>Upgrade InTimisoara is an initiative that gives<br>residents of Timisoara the opportunity to be a part of<br>shaping the city’s future by co-creating solutions for the Smarter Timisoara.</p>
    <button class="scrollto">Find out more</button>
</div>
}

<div class="content">
    <div class="container">
        <div class="features">
            <div class="title-features">
                <h3>We are a technical digital agency</h3>
                <p>that delivers large, complex <i>online solutions</i> using a continuous development approach. </p>
            </div>
            <div class="about-us-homepage">
                <div class="owl-carousel-about">
                    @foreach (var project in projects)
                    {
                    <div class="item">
                        <div class="col-md-4 col-md-offset-1 col-sm-5 text-center about-image-container">
                            <div class="about-image-container-inner">
                                <img src="@project.GetPropertyValue("image")" />
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-7">
                            <div class="center-element">
                                <div class="center-element-inner">
                                    <h4 class="uppercase"><a href="@project.NiceUrl()">@project.GetPropertyValue("title")</a></h4>
                                    <p class="content-about-slider">@project.GetPropertyValue("description")</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>